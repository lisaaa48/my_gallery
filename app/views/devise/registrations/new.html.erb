<div class="show">
  <div class="index-content" style="padding-top: 100px;">
    <div class="container" style="padding-bottom: 60px;">
      <div class="row">
        <div class="col-md-4"></div>
          <div class="col-md-4" style="padding-top: 80px;">
            <div class="form-user style-1 rounded has-shadow-1 text-cente">
              <!-- <div class="form-headerr"> -->
                  <h2>Sign up to <span class="my-gallery">My Gallery</span></h2>
              <!-- </div> -->
              <div class="form-body" style="padding-top: 20px;">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>
                <div class="form-group">
                    <h5>Name</h5>
                    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"User name"%>
                </div>
                <div class="form-group">
                    <h5>Email</h5>
                    <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"Email"%>
                </div>
                <div class="form-group">
                    <h5>Password</h5>
                    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"Password" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"Password confirmation" %>
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <%= f.submit "Sign up", class:"btn btn-outline-secondary btn-lg btn-block btn-base-1 mt-20" %>
                <% end %>
                </div>

                </div>
            </div>
          <div class="col-md-4" style="padding-bottom: 200px;"></div>
        </div>
      </div>
    </div>
  </div>
</div>

