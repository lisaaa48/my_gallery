<!DOCTYPE html>
<html>
  <head>
    <title>MyGallery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.action_name %>'>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
      <%= link_to "My Gallery Admin", admin_works_path, class: "navbar-brand my-gallery" %>
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="justify-content-end navbar-collapse collapse mr-auto" id="navbarSupportedContent" style="">
          <ul class="navbar-nav">
            <% if admin_signed_in? %>
              <li class="nav-item dropdown dropleft">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Dropdown
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="margin-right: 15px;">
                  <div class="dropdown-divider">Works</div>
                  <%= link_to "Upload new image", new_admin_work_path, class: "dropdown-item" %>
                  <%= link_to "Uploaded images", admin_works_path, class: "dropdown-item" %>
                  <%= link_to "Add holder", new_admin_holder_path, class: "dropdown-item" %>
                  <div class="dropdown-divider">Users</div>
                  <%= link_to "All users", admin_users_path, class: "dropdown-item" %>
                  <div class="dropdown-divider">Session</div>
                  <%= link_to "Log out", destroy_admin_session_path, method: :delete, class: "dropdown-item" %>
                </div>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign up", new_admin_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign in", new_admin_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
    </nav>
    <%= yield %>
  </body>
</html>

